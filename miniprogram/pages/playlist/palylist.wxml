 <swiper
        indicator-dots="true" autoplay="true"  circular="{{circular}}" vertical="{{vertical}}"
        interval="2000" duration="1000" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
        <block wx:for="{{imgUrls}}" wx:key="index">
          <swiper-item>
            <image src="{{item}}" mode="widthFix" class="my_img"></image>
          </swiper-item>
        </block>
      </swiper>

<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="index">
    <x-playlist playlist="{{item}}"></x-playlist>
  </block>
</view>


    